{
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
    ],
    "transform": {
        "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
        "**/__tests__/**/*.js",
        "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
        "controllers/**/*.js",
        "services/**/*.js",
        "!**/node_modules/**"
    ]
}
